{
  "name": "bayesian-learning-control",
  "version": "1.1.4",
  "repository": {
    "type": "git",
    "url": "git@github.com:rickstaa/bayesian-learning-control.git"
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "remark-cli": "^10.0.0",
    "remark-lint": "^9.0.1",
    "remark-preset-lint-recommended": "^6.0.1",
    "standard-version": "9.3.1"
  },
  "scripts": {
    "prepare": "husky install",
    "release": "HUSKY=0 standard-version && git push --follow-tags origin main"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.md": "./node_modules/.bin/remark -o .",
    "*.py": [
      "black .",
      "flake8 ."
    ]
  }
}
